<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="fieldparams">
		<fieldset name="fieldparams">
			<field
				name="directory"
				type="folderlist"
				directory="images"
				hide_none="true"
				hide_default="true"
				recursive="true"
				label="PLG_FIELDS_JUGNMEDIA_PARAMS_DIRECTORY_LABEL"
				description="PLG_FIELDS_JUGNMEDIA_PARAMS_DIRECTORY_DESC"
			>
				<option value="">COM_FIELDS_FIELD_USE_GLOBAL</option>
				<option value="/">/</option>
			</field>

			<field
				name="multiple"
				type="list"
				label="PLG_FIELDS_JUGNMEDIA_PARAMS_MULTIPLE_LABEL"
				description="PLG_FIELDS_JUGNMEDIA_PARAMS_MULTIPLE_DESC"
			>
				<option value="">COM_FIELDS_FIELD_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field
					name="video_w"
					type="number"
					default="640"
					min="0"
					max="2000"
					step="1"
					label="PLG_FIELDS_JUGNMEDIA_PARAMS_VIDEO_W_LABEL"
					description="PLG_FIELDS_JUGNMEDIA_PARAMS_VIDEO_W_DESC"
				/>
				<field
					name="video_h"
					type="number"
					default="480"
					min="0"
					max="2000"
					label="PLG_FIELDS_JUGNMEDIA_PARAMS_VIDEO_H_LABEL"
					description="PLG_FIELDS_JUGNMEDIA_PARAMS_VIDEO_H_DESC"
				/>
		</fieldset>
	</fields>
</form>
